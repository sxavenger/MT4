#include "Simple.hlsli"

//=========================================================================================
// buffer
//=========================================================================================

Texture2D<float4> gDiffuse : register(t0);
SamplerState gSampler      : register(s0);

////////////////////////////////////////////////////////////////////////////////////////////
// main
////////////////////////////////////////////////////////////////////////////////////////////
PSOutput main(PSInput input) {

	PSOutput output = (PSOutput)0;

	output.color = gDiffuse.Sample(gSampler, input.texcoord);

	return output;
	
}