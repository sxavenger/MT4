// main
////////////////////////////////////////////////////////////////////////////////////////////
PSOutput main(VSOutput input) {
	
	PSOutput output;
	
	output.color = gTexture.Sample(gSampler, input.texcoord) * input.color;
	
	if (output.color.a == 0.0f) {
		discard;
	}
	
	return output;
}