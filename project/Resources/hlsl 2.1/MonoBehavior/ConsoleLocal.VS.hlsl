PSInput main(VertexInput input) {
	
	PSInput output;
	
	output.position = mul(input.position, viewProj);
	output.texcoord = input.texcoord;
	output.normal   = normalize(input.normal);
	output.worldPos = input.position.xyz;
	
	return output;
	
}